#include <iostream>
#include <string>
#include <cmath>

class LandPlot
{
private:
    std::string LandType;
    std::string OwnerName;

public:
    LandPlot(std::string type, std::string owner) : LandType(type), OwnerName(owner)
    {

    }

    double calculateArea();

    void printInfo()
    {
        std::cout << "Тип участка: " << LandType << "\n" << "Владелец: " << OwnerName << "\n";
    }
};

class Circle : public LandPlot
{
    double radius;

public:
    Circle(std::string type, std::string owner, double r) : LandPlot(type, owner), radius(r)
    {

    }

    double calculateArea()
    {
        return 3.14 * radius * radius;
    }

    void printInfo()
    {
        LandPlot::printInfo();
        std::cout << "Форма: Круг\n" << "Радиус: " << radius << " м\n" << "Площадь: " << calculateArea() << " кв.м\n\n";
    }
};

class rectangle : LandPlot
{
    double length, width;

public:
    rectangle(std::string type, std::string owner, double l, double w) : LandPlot(type, owner), length(l), width(w)
    {

    }
    
    double calculateArea()
    {
        return length * width;
    }

    void printInfo()
    {
        LandPlot::printInfo();
        std::cout << "Форма: Прямоугольник\n" << "Размеры: " << length << " м x " << width << " м\n" << "Площадь: " << calculateArea() << " кв.м\n\n";
    }
};

class square : public LandPlot
{
    double s1, s2;

public:
    square(std::string type, std::string owner, double l, double w) : LandPlot(type, owner), s1(l), s2(w)
    {

    }

    double calculateArea()
    {
        return s1 * s2;
    }

    void printInfo()
    {
        LandPlot::printInfo();
        std::cout << "Форма: Квадрат\n" << "Размеры: " << s1 << " м x " << s2 << " м\n" << "Площадь: " << calculateArea() << " кв.м\n\n";
    }
};

class triangle : public LandPlot
{
    double s1, s2, s3;

public:
    triangle(std::string type, std::string owner, double s1, double s2, double s3) : LandPlot(type, owner), s1(s1), s2(s2), s3(s3)
    {

    }

    double calculateArea()
    {
        double p = (s1 + s2 + s3) / 2;
        return sqrt(p * (p - s1) * (p - s2) * (p - s3));
    }

    void printInfo()
    {
        LandPlot::printInfo();
        std::cout << "Форма: Треугольник\n" << "Стороны: " << s1 << " м, " << s2 << " м, " << s3 << " м\n" << "Площадь: " << calculateArea() << " кв.м\n\n";
    }
};

int main() {
    setlocale(LC_ALL, "");
    Circle circlePlot("ИЖС", "Иванов И.И.", 10.0);
    rectangle rectPlot("Сельхоз", "Петров П.П.", 20.0, 30.0);
    square squarePlot("ЛПХ", "Сидоров С.С.", 15.0, 15.0);
    triangle trianglePlot("Дача", "Кузнецов К.К.", 5.0, 5.0, 5.0);

    std::cout << "Информация об участках:\n\n";
    circlePlot.printInfo();
    rectPlot.printInfo();
    squarePlot.printInfo();
    trianglePlot.printInfo();

    return 0;
}
